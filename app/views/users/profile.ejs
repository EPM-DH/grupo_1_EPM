                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Configuraci칩n del perfil</h4>
                    </div>
                    <form action="/user/edit/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="row mt-3">
                            <div class="col-md-12"><label for="nombre">Nombre</label><input type="text" class="form-estandar form-control <%= locals.errors && errors.nombre ? 'is-invalid' : '' %>" name="nombre"  id="nombre" value="<%= firstName %>">
                                <div class="text-danger">
                                    <% if(locals.errors && errors.nombre) { %> 
                                        <%= errors.nombre.msg %> 
                                    <% } %>
                                </div></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label for="apellido">Apellido</label><input type="text" class="form-estandar form-control <%= locals.errors && errors.apellido ? 'is-invalid' : '' %>" name="apellido" id="apellido" value="<%= lastName %>">
                                <div class="text-danger">
                                    <% if(locals.errors && errors.apellido) { %> 
                                        <%= errors.apellido.msg %> 
                                    <% } %>
                                </div></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label for="email">E-mail</label><input type="email" class="form-estandar form-control <%= locals.errors && errors.email ? 'is-invalid' : '' %>" name="email" id="email" value="<%= email %>">
                                <div class="text-danger">
                                    <% if(locals.errors && errors.email) { %> 
                                        <%= errors.email.msg %> 
                                    <% } %>
                                </div></div>
                        </div>
                        <div class="row mt-3">
