<%- include('../partials/header.ejs', {title: 'Detalle de productos', home: 0}) %>
<%- include('../partials/navbar.ejs') %>
<%- include('../partials/offcanvas.ejs') %>
	<!-- product detail -->
	<br><br>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="tc">Detalle del producto <i><%= product.name %></i></h1>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-12 col-lg-8">
				<%- include("../partials/carousel.ejs", {images: product.carouselImages, identifier: product.identifier}) %>
				<h2>Descripción</h2>
				<p class="descripcion">
					<%= product.longDescription %>
				</p>
				<h2>Características</h2>
				<ul class="descripcion">
					<% for(elemento of product.characteristics) { %>
					  <li> <%= elemento %> </li>
					<% } %>
				  </ul>
			</div>
			<div class="col-12 col-lg-4">
				<article class="product-detail-info">
					<h2 class="product-detail-title"><%= product.name %></h2>
					
					<div class="col">
						<span class="fa fa-star checked"></span>
						<span class="fa fa-star checked"></span>
						<span class="fa fa-star checked"></span>
						<span class="fa fa-star unchecked2"></span>
						<span class="fa fa-star unchecked2"></span>
					</div>
					<div class="col descSide">
						<p>Productos vendidos: <%= product.vendidos %></p>
					</div>

					<div class="col up">
						<% for (categoria of product.categories) { %>
						<button class="boton etiqueta-producto">
						  <div><%= categoria %></div>
						</button>
						<% } %>
					</div>

					<p class="product-detail-price small precio-producto">
						$<%= product.price %>
					</p>

					<p class="descSide">
						<%= product.shortDescription %>
					</p>

					<a type="submit" class="boton-estandar boton-flex anchorFormat" href="#">
						Añadir al carrito
					</a>

					<hr>

					<div class="d-flex flex-row justify-content-between">
						<div class="col-8">
							<a href="/product/edit/<%= product.id %>" type="submit" class="boton-estandar boton-flex anchorFormat editButton">Editar producto</a>
						</div>
						<div class="col-6">
							<form action="/product/delete/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
								<button type="submit" class="boton-estandar boton-flex anchorFormat deleteButton">Eliminar</button>
							</form>
						</div>
					</div>
				</article>
			</div>
		</div>
	</div>
	<!-- /product detail -->
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"
  ></script>
</body>
<%- include('../partials/footer.ejs') %>