  <!-- Modal -->
  <div class="modal fade" id="addWishlistModal" tabindex="-1" role="dialog" aria-labelledby="addWishlistModalTitle" aria-hidden="true" <% if(locals.errors && !locals.ident) { %> style="display: block;" <% } %>>
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addWishlistModalTitle">Creación de nueva lista</h5>
        </div>
        <div class="modal-body">
            <form action="/wishlist/create/<%= locals.product && product.id ? product.id : '0' %>" method="POST" style="display: inline-flex">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <label for="name">
                            Nombre
                        </label>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-estandar form-control <%= locals.errors && errors.name ? 'is-invalid' : '' %>" name="name"  id="name">
                        <div class="text-danger">
                            <% if(locals.errors && errors.name) { %> 
                                <%= errors.name.msg %> 
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-column justify-content-center align-items-center col-3">
                    <div class="col-12">
                        <label for="status">
                            Estatus
                        </label>
                    </div>
                    <div class="col-12">
                        <select name="status" id="status">
                            <option value="Privada">Privada</option>
                            <option value="Pública">Pública</option>
                          </select>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-center align-items-center col-3">
                    <button type="submit" class="btn btn-success">Agregar</button>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary closing" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>