<%- include('partials/header.ejs', {title: 'Login', home: 0}) %>
<%- include('partials/navbar.ejs') %>
<%- include('partials/offcanvas.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="row justify-content-center">
                    <div class="col-auto mt-3">
                        <h1 class="tc">Inicia Sesión</h1>
                    </div>
                </div>
                <br>
                <form action="/register" method="post">
                    <div class="row justify-content-center mt-3">
                        <div class="col-7">
                            <label for="email">
                                E-mail
                            </label>
                        </div>
                        <div class="col-7">
                            <input type="email" class="form-estandar" name="email" id="email" required>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-7">
                            <label for="contrasena">
                                Contraseña
                            </label>
                        </div>
                        <div class="col-7">
                            <input type="password" class="form-estandar" name="contrasena" id="contrasena" required>
                        </div>
                    </div>               
                    <br><br>
                    <div class="row justify-content-center mt-3">
                        <div class="col-11 center">
                            <button type="submit" class="boton-estandar boton-flex">
                                Continuar
                            </button>
                        </div>
                    </div>
                    <br>
                    <div class="row justify-content-center mt-3">
                        <div class="col-11 center">
                            <a href="/register" >
                                <button type="button" class="boton-secundario boton-flex">
                                    Crear Cuenta
                                </button>
                            </a>
                        </div>
                    </div>
                    <br><br><br><br><br>
                    <div class="row justify-content-center mt-3">
                        <div class="col-7 center">
                            <a href="#" class="standarSize">Necesito ayuda para ingresar</a>
                        </div>
                        <br><br>
                        <div class="col-7 center">
                            <p class="standarSize">Protegido por reCAPTCHA - Privacidad - Condiciones</p>
                        </div>
                    </div>       
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
<%- include('partials/footer.ejs') %>