<%- include('partials/header.ejs', {title: 'Equipo Para Montaña', home: 1}) %>
<%- include('partials/navbar.ejs') %>
<%- include('partials/offcanvas.ejs') %>
    <!--Bloque presentacion-->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-11">
          <h1 class="tc">Equipo Para Montaña</h1>
        </div>
        <div class="col-10">
          <h3 class="slogan">
            Encuentra las guías de productos para tu deporte favorito
          </h3>
        </div>
      </div>
      <div class="row">
        <div class="col mt-2">
          <div
            id="carouselExampleIndicators"
            class="carousel carousel-dark slide"
            data-bs-ride="carousel"
          >
            <div class="carousel-indicators">
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="0"
                class="active"
                aria-current="true"
                aria-label="Slide 1"
              ></button>
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="1"
                aria-label="Slide 2"
              ></button>
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="2"
                aria-label="Slide 3"
              ></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <div class="row justify-content-center">
                  <div class="col-7 cuadro-deportes">
                    <div class="row justify-content-center">
                      <div class="col-auto">
                        <h4 class="mt-3 mb-4">Escalada en roca</h4>
                      </div>
                    </div>
                    <div class="row justify-content-center">
                      <div class="col-6">
                        <div class="cuadro-imagen-deportes">
                          <img
                            src="img/escalada.png"
                            class="mb-4 d-block w-100"
                            alt="Imagen Mujer escalando"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="carousel-item">
                <div class="row justify-content-center">
                  <div class="col-7 cuadro-deportes">
                    <div class="row justify-content-center">
                      <div class="col-auto">
                        <h4 class="mt-3 mb-4">Escalada en roca</h4>
                      </div>
                    </div>
                    <div class="row justify-content-center">
                      <div class="col-6">
                        <div class="cuadro-imagen-deportes">
                          <img
                            src="img/escalada.png"
                            class="mb-4 d-block w-100"
                            alt="Imagen Mujer escalando"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="carousel-item">
                <div class="row justify-content-center">
                  <div class="col-7 cuadro-deportes">
                    <div class="row justify-content-center">
                      <div class="col-auto">
                        <h4 class="mt-3 mb-4">Escalada en roca</h4>
                      </div>
                    </div>
                    <div class="row justify-content-center">
                      <div class="col-6">
                        <div class="cuadro-imagen-deportes">
                          <img
                            src="img/escalada.png"
                            class="mb-4 d-block w-100"
                            alt="Imagen Mujer escalando"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>
      <!--Fin del Carrusel-->
      <div class="row justify-content-center mt-3 mb-2">
        <div class="col-11 p-0">
          <p class="catDes">Destacados</p>
        </div>
      </div>
      <!--productos-->
      <%- include('partials/producto.ejs', {products}) %>
      <!--Modal detalle del producto-->
      <%- include('partials/detalleProducto.ejs', {products}) %>
      <!--fin del modal-->
      <!--fin de producto-->
      <%- include('partials/userToast.ejs') %>

      <!-- For shopping cart guest products addition confirmation-->
      <% if (locals.currentCart) { %>
        <div class="modal fade show" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="cartModalTitle">Productos pendientes por añadir en carrito de invitado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Existen productos en el carrito de invitado. 
                ¿Deseas añadirlos a tu cuenta?
              </div>
              <div class="modal-footer">
                <form action="/cart/dismiss" method="GET" style="display: inline-flex">
                  <button type="submit" class="btn btn-warning dimiss-button">Descartar</button>
                </form>
                <form action="/cart/include" method="POST" style="display: inline-flex">
                  <button type="submit" class="btn btn-success add-button">Añadir</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>


    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/js/modal.js"></script>
  </body>
<%- include('partials/footer.ejs') %>