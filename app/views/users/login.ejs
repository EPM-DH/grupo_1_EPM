<%- include('../partials/header.ejs', {title: 'Login', home: 0}) %>
<%- include('../partials/navbar.ejs') %>
<%- include('../partials/offcanvas.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="row justify-content-center">
                    <div class="col-auto mt-3">
                        <h1 class="tc">Inicia Sesión</h1>
                    </div>
                </div>
                <br>
                <div class="row justify-content-center mt-3 text-danger">
                    <div class="col-7">
                        <% if(locals.errors && errors.failedVerification) { %> 
                            <%= errors.failedVerification.msg %> 
                        <% } %>
                    </div>
                </div>
                <form action="/user/login" method="POST">
                    <div class="row justify-content-center mt-3">
                        <div class="col-7">
                            <label for="email">
                                E-mail
                            </label>
                        </div>
                        <div class="col-7">
                            <input type="email" class="form-estandar form-control <%= locals.errors && errors.email ? 'is-invalid' : '' %>" name="email" id="email" value="<%= locals.old && old.email ? old.email : '' %>">
                            <div class="text-danger">
                                <% if(locals.errors && errors.email) { %> 
                                    <%= errors.email.msg %> 
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-7">
                            <label for="contrasena">
                                Contraseña
                            </label>
                        </div>
                        <div class="col-7">
                            <input type="password" class="form-estandar form-control <%= locals.errors && errors.contrasena ? 'is-invalid' : '' %>" name="contrasena" id="contrasena">
                            <div class="text-danger">
                                <% if(locals.errors && errors.contrasena) { %> 
                                    <%= errors.contrasena.msg %> 
                                <% } %>
                            </div>
                        </div>
                    </div>  
                    <br>
                    <div class="row justify-content-center mt-3">
                        <div class="col-7">
                            <div class="form-check">
                                <input class="form-check-input centerCheck" type="checkbox" id="recuerdame" name="recuerdame">
                                <label class="form-check-label" for="recuerdame">
                                    <p>Recuérdame</p>
                                </label>
                              </div>
                        </div>
                    </div>            
                    <br><br>
                    <div class="row justify-content-center mt-3">
                        <div class="col-11 center">
                            <button type="submit" class="boton-estandar boton-flex">
                                Continuar
                            </button>
                        </div>
                    </div>
                    <br>
                    <div class="row justify-content-center mt-3">
                        <div class="col-11 center">
                            <a href="/user/register">
                                <button type="button" class="boton-secundario boton-flex">
                                    Crear Cuenta
                                </button>
                            </a>
                        </div>
                    </div>
                    <br><br><br><br><br>
                    <div class="row justify-content-center mt-3">
                        <div class="col-7 center">
                            <a href="#" class="standarSize">Necesito ayuda para ingresar</a>
                        </div>
                        <br><br>
                        <div class="col-7 center">
                            <p class="standarSize">Protegido por reCAPTCHA - Privacidad - Condiciones</p>
                        </div>
                    </div>       
                </form>
            </div>
        </div>
        <%- include('../partials/userToast.ejs') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/js/toast.js"></script>
</body>
<%- include('../partials/footer.ejs') %>