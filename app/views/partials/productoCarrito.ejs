<% for (producto of products) { %>
    <div class="d-flex flex-row justify-content-around mt-3">
        <div class="col-11 producto-linea">
            <div class="d-flex flex-row justify-content-around align-items-center">
                <div class="col-3 pt-2 pb-2">
                    <button class="boton-flex boton-producto boton-vacio">
                        <img src="img/products/<%= producto.image %>" alt="atc-escalada">
                    </button>
                </div>
                <div class="d-flex flex-column align-items-center">
                    <button class="boton-flex boton-vacio p-0" type="button" data-bs-toggle="modal"
                        data-bs-target="#modal<%= producto.identifier %>">
                        <div class="titulo-producto p-1">
                            <%= producto.name %>
                        </div>
                    </button>
                    <!-- Button trigger modal -->
                    <button type="button" class="boton-estandar anchorFormat deleteButton" data-toggle="modal" data-target="#confirmationModal_<%= producto.identifier %>">Eliminar</button>
                </div>
                <div class="col-2">
                    <div class="d-flex flex-row justify-content-between itemNumber">
                        <div class="value-button decrease" id="decrease<%= producto.identifier %>" <% if(producto.quantity == 1) { %> style="pointer-events: none;opacity: 0.4;" <% } %> onclick="decreaseValue(this.id, <%= producto.cartId %>)" value="Decrease Value">-</div>
                        <input type="number" class="number" min="1" id="number<%= producto.identifier %>" value="<%= producto.quantity %>" />
                        <div class="value-button increase" id="increase<%= producto.identifier %>" onclick="increaseValue(this.id, <%= producto.cartId %>)" value="Increase Value">+</div>
                        <!--<button class="p-0">-</button>
                        <div class="priceBreakdown"></div>
                        <button class="p-0">+</button>-->
                    </div>
                </div>
                <div class="col-2">
                    <button class="boton-flex boton-vacio p-0"> <!-- Why the button? -->
                        <div class="priceBreakdown" id="precio<%= producto.identifier %>">
                            $<%= producto.price.toLocaleString() %>
                        </div>
                    </button>
                </div>
                <div class="col-1">
                    <div class="col priceBreakdown" id="subtotalI<%= producto.identifier %>">
                        $<%= (producto.price*producto.quantity).toLocaleString() %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/confirmationModal.ejs', {elemento: 'cart', id: producto.cartId, identifier: producto.identifier }) %> 
<% } %>
