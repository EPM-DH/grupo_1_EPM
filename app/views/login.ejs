<%- include('partials/header.ejs') %>
<title>Login</title>
<%- include('partials/header2.ejs') %>
<%- include('partials/navbar.ejs') %>
    <!--offcanvas-->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div>
                Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images,
                lists, etc.
            </div>
        </div>
    </div>
    <!--fin offcanvas-->
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="row justify-content-center">
                    <div class="col-auto mt-3">
                        <h1 class="tc">Inicia Sesión</h1>
                    </div>
                </div>
                <form action="/register" method="post">
                    <div class="row justify-content-center mt-3">
                        <div class="col-11">
                            <label for="email">
                                E-mail
                            </label>
                        </div>
                        <div class="col-11">
                            <input type="email" class="form-estandar" name="email" id="email" required>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-11">
                            <label for="contrasena">
                                Contraseña
                            </label>
                        </div>
                        <div class="col-11">
                            <input type="password" class="form-estandar" name="contrasena" id="contrasena" required>
                        </div>
                    </div>                  
                    <div class="row justify-content-center mt-3">
                        <div class="col-11">
                            <button type="submit" class="boton-estandar boton-flex">
                                Continuar
                            </button>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-11">
                            <a href="/register" >
                                <button type="button" class="boton-secundario boton-flex">
                                    Crear Cuenta
                                </button>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
<%- include('partials/footer.ejs') %>