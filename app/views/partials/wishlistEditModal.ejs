  <!-- Modal -->
  <div class="modal fade" id="editWishlistModal_<%= list.identifier %>" tabindex="-1" role="dialog" aria-labelledby="editWishlistModalTitle" aria-hidden="true" <% if(locals.errors && locals.ident == list.identifier) { %> style="display: block;" <% } %>>
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editWishlistModalTitle">Edición de lista</h5>
        </div>
        <div class="modal-body">
            <form action="/wishlist/edit/<%= list.id %>?_method=PUT" method="POST" style="display: inline-flex">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <label for="name">
                            Nombre
                        </label>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-estandar form-control <%= locals.errors && errors.name ? 'is-invalid' : '' %>" name="name"  id="name" value="<%= list.name %>">
                        <div class="text-danger">
                            <% if(locals.errors && errors.name) { %> 
                                <%= errors.name.msg %> 
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-column justify-content-center align-items-center col-3">
                    <div class="col-12">
                        <label for="status">
                            Estatus
                        </label>
                    </div>
                    <div class="col-12">
                        <select name="status" id="status">
                            <%= list.status %>
                            <option value="1" <% if(list.visibility_id == 1) { %> selected <% } %>>Privada</option>
                            <option value="2" <% if(list.visibility_id == 2) { %> selected <% } %>>Pública</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-center align-items-center col-3">
                    <button type="submit" class="btn btn-primary">Editar</button>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary closing" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>