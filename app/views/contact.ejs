<%- include('partials/header.ejs', {title: 'ContÃ¡ctanos', home: 0}) %>
<%- include('partials/navbar.ejs') %>
<%- include('partials/offcanvas.ejs') %>
    
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 border-right">
                <br>
                <!-- Map -->
                <div id="map"></div>
            </div>
            <div class="col-md-6 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Formulario de contacto</h4>
                    </div>
                    <form action="/contact" method="POST">
                        <div class="row mt-3">
                            <div class="col-md-12"><label for="nombreCompleto">Nombre Completo</label><input type="text" class="form-estandar form-control <%= locals.errors && errors.nombre ? 'is-invalid' : '' %>" name="nombreCompleto"  id="nombreCompleto" value="<%= locals.old && old.nombreCompleto ? old.nombreCompleto : '' %>">
                                <div class="text-danger">
                                    <% if(locals.errors && errors.nombreCompleto) { %> 
                                        <%= errors.nombreCompleto.msg %> 
                                    <% } %>
                                </div></div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label for="email">E-mail</label><input type="email" class="form-estandar form-control <%= locals.errors && errors.email ? 'is-invalid' : '' %>" name="email" id="email" value="<%= locals.old && old.email ? old.email : '' %>">
                                <div class="text-danger">
                                    <% if(locals.errors && errors.email) { %> 
                                        <%= errors.email.msg %> 
                                    <% } %>
                                </div></div>
                        </div>
                        <div class="row justify-content-center mt-3">
                            <div class="col-md-12">
                                <label for="message">Mensaje</label>
                            </div>
                            <div class="col-md-12">
                                <textarea class="form-control <%= locals.errors && errors.message ? 'is-invalid' : '' %>" id="message" rows="4" name="message"><%= locals.old && old.message ? old.message : '' %></textarea>
                                <div class="text-danger">
                                    <% if(locals.errors && errors.message) { %> 
                                        <%= errors.message.msg %> 
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="mt-5 text-center"><button type="submit" class="boton-estandar boton-flex">Enviar mensaje</button></div>
                    </form>
                </div>
            </div>
        </div>
        <%- include('partials/userToast.ejs') %>
    </div>

    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/js/contact.js"></script>
    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script
      src="https://maps.googleapis.com/maps/api/js?key=YouAPIKey&callback=initMap&libraries=&v=weekly"
      async
    ></script>
  </body>
