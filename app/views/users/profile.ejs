    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-5 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="/img/users/<%= img %>"><span class="font-weight-bold profile-details"><%= firstName %> <%= lastName %></span><span class="text-black-50 profile-details"><%= email %></span>
                    <!-- Button trigger modal --><br>
                    <button type="button" class="boton-estandar anchorFormat deleteButton" data-toggle="modal" data-target="#confirmationModal">Eliminar</button>
                </div>
